{% extends "layout.twig" %}

{% block breadcrumbs %}
    {% set breadcrumbsList = [{url: url({controller: 'dictionary', action: 'edit', id: word.did}, 'admin'), label: 'Edytowanie tłumaczenia'}] %}

    {% set breadcrumbsList = breadcrumbsList|merge([{url: url({controller: 'dictionary'}, 'admin', true), label: 'Słownik'}]) %}

    {{ cms.breadcrumbs(breadcrumbsList) }}
{% endblock %}
    
{% block helpbox %}
    {% include 'dictionary/_helpBox.twig' %}
{% endblock %}

{% block content %}                   

<div class="right-side">
    <div class="content">
        <h1>Edytowanie tłumaczenia: </h1>
        {{ dictionaryForm|raw }}

        <script type="text/javascript">
        // <[[!CDATA
            $(document).ready(function(){

                $('.tabs').tabs();  

                $('.ui-tabs-panel').each(function () {
                        var id = $(this).has('.error').attr('id');
                        var count = $(this).find('.error').size();
                        $('a[href="#'+id+'"]').append(' <em>('+ count +')</em>');
                });

            });
        // ]]>
        </script>
    </div>
</div>

{% endblock %}