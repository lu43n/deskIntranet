{% extends "layout.twig" %}

{% block breadcrumbs %}
    {% set breadcrumbsList = [{url: url({controller: 'news', action: 'view', id: news.nid}, 'admin'), label: news.translation.title}] %}
    {% set breadcrumbsList = breadcrumbsList|merge([{url: url({controller: 'news'}, 'admin', true), label: 'Biuletyn'}]) %}
    {{ cms.breadcrumbs(breadcrumbsList) }}
{% endblock %}
    
{% block helpbox %}
    {% include 'news/_helpBox.twig' %}
{% endblock %}

{% block content %}                   

<div class="right-side">
    <div class="content">
        <h1 style="margin: 0;">{{ news.translation.title }}</h1>
        <span style="margin: 2px 0 10px 0; display: block; font-size: 11px; color: #999;">Autor: {{ news.user.firstname }} {{ news.user.lastname }} &nbsp; &nbsp; Opublikowano: {{ news.created_at }}</span>
        <div>
            {{ news.translation.content|raw }}
        </div>
    </div>
</div>

{% endblock %}