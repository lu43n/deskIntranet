<div class="help_box_start"></div>
<div class="help_box">
    <h2 style="padding-top: 0;">Akcje</h2>
    <ul>
        <li>
            <a href="{{ url({ controller: 'news', action: 'add'}, 'admin', true) }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/add_small.png" alt="Dodaj aktualność" /> Dodaj aktualność</a>
        </li>
        {% if request.getActionName() == 'add' or request.getActionName() == 'edit' or request.getActionName() == 'search' %}
