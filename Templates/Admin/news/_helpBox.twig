        {% endif %}
        <li id="delete-newses" style="display: none;">
            <a href="{{ url({controller: 'news', action: 'delete'}, 'admin') }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/delete_small.png" alt="Usuń zaznaczone" /> Usuń zaznaczone</a>
        </li>
    </ul>
</div>
