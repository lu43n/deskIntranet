<div class="help_box_start"></div>
<div class="help_box">
    <h2 style="padding-top: 0;">Akcje</h2>
    <ul>
        {% if request.getActionName() == 'index' and permission.pid %}
        <li>
            <a href="{{ url({ controller: 'permissions', action: 'index', id: permission.parent_id }, 'admin', true) }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/folderup_small.png" alt="Przejdź poziom wyżej" /> Przejdź poziom wyżej</a>
        </li>
        {% endif %}
        {% if request.getActionName() == 'index' or request.getActionName() == 'search' %}
        <li>
            <a href="{{ url({ controller: 'permissions', action: 'add', id: permission.pid }, 'admin', true) }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/add_small.png" alt="Dodaj grupę" /> Dodaj uprawnienie</a>
        </li>
        {% endif %}
        {% if request.getActionName() == 'add' %}
        <li>
            <a href="{{ url({controller: 'permissions', action: 'index', id: permission.pid}, 'admin') }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/back_small.png" alt="Powrót" /> Powrót do listy</a>
        </li>
        {% endif %}
        {% if request.getActionName() == 'edit' %}
        <li>
            <a href="{{ url({ controller: 'permissions', action: 'add', id: permission.parent_id }, 'admin', true) }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/add_small.png" alt="Dodaj grupę" /> Dodaj uprawnienie</a>
        </li>
        <li>
            <a href="{{ url({controller: 'permissions', action: 'index', id: permission.parent_id}, 'admin') }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/back_small.png" alt="Powrót" /> Powrót do listy</a>
        </li>
        {% endif %}
        <li id="delete-permissions" style="display: none;">
            <a href="{{ url({controller: 'permissions', action: 'delete-permissions'}, 'admin') }}" style="font-weight:bold;"><img src="{{ baseUrl }}/images/admin/delete_small.png" alt="Usuń zaznaczone" /> Usuń zaznaczone</a>
        </li>
    </ul>
</div>
<div class="help_box_end"></div> 

