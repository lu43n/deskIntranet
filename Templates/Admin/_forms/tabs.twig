<div class="tabs">
    <ul>
        {% for title, tab in tabs %}   
        <li><a href="#tab_{{ tab.getAttrib('id') }}">{{ tab.getAttrib('title') }}</a></li>
        {% endfor %}
    </ul>
        
    {% for title, tab in tabs %}
    <div id="tab_{{ tab.getAttrib('id') }}">
        {{ tab.render()|raw }}
    </div>   
    {% endfor %}
    
</div>